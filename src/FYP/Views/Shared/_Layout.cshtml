@{
    Staff curStaff = Context.Session.GetObject<Staff>("staff");
    Customer curCustomer = Context.Session.GetObject<Customer>("customer");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Cache-Control" content="no-store" />
    <title>Aptive Physiotherapy @ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.3.2/js/mdb.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.3.2/css/mdb.min.css" />*@

    <link href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/lib/moment/min/moment.min.js"></script>
    <script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Cookie" rel="stylesheet">


    <link href="~/lib/jquery-ui/themes/base/jquery-ui.min.css" rel="stylesheet" type="text/css" />

    <link href="~/lib/fullcalendar/dist/fullcalendar.min.css" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <script type="text/javascript" src="~/lib/jquery-ui/jquery-ui.min.js"> </script>

    <script type="text/javascript" src="~/lib/fullcalendar/dist/fullcalendar.min.js"> </script>

    <script>
        $(function () {
            $('#tabs').tabs();
            $("#tabs").bind();
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
        
                reader.onload = function (e) {
                    $('#profile')
                        .attr('src', e.target.result)
                        .width(280)
                        .height(400);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>



    <style>
        @@media (max-width: 1200px) {
            .navbar-header {
                float: none;
            }

            .navbar-left, .navbar-right {
                float: none !important;
            }

            .navbar-toggle {
                display: block;
            }

            .navbar-collapse {
                border-top: 1px solid transparent;
                box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
            }

            .navbar-fixed-top {
                top: 0;
                border-width: 0 0 1px;
            }

            .navbar-collapse.collapse {
                display: none !important;
            }

            .navbar-nav {
                float: none !important;
                margin-top: 7.5px;
            }

                .navbar-nav > li {
                    float: none;
                }

                    .navbar-nav > li > a {
                        padding-top: 10px;
                        padding-bottom: 10px;
                    }

            .collapse.in {
                display: block !important;
            }
        }

        .input-group-addon {
            cursor: pointer;
        }

        #BsDateTimePicker {
            cursor: pointer;
        }

        .navbar {
            margin-bottom: 0;
            background-color: #28B78D;
            z-index: 9999;
            border: 0;
            border-radius: 0;
            font-family: Montserrat, sans-serif;
        }

            .navbar li a, .navbar .navbar-brand {
                color: #fff !important;
            }

        .navbar-nav li a:hover, .navbar-nav li.active a {
            color: #243743 !important;
            background-color: #fff !important;
        }

        .navbar-default .navbar-toggle {
            border-color: transparent;
            color: #fff !important;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-menu a {
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

        h2 {
            font-family: 'Zilla Slab', serif;
            font-size: 35px;
        }

        th, tr {
            font-family: 'Zilla Slab', serif;
            font-size: 18px;
            color: #243743;
        }

        .navbar-brand {
            font-family:  'Cookie', cursive;
            font-size: 36px;
            padding-top: 13px;
        }
    </style>
    <script type="text/javascript">
            $(function () {
                $('#BsDateTimePicker1').datetimepicker({
                    format: 'YYYY-MM-DD HH:mm',
                    minDate: new Date(),
                    daysOfWeekDisabled: [0, 6],
                    sideBySide: true,


                });
            });
           

    </script>
    <script type="text/javascript">
        $(function () {

            $('#BsDateTimePicker').datetimepicker({
                format: 'YYYY-MM-DD',
                maxDate: new Date


            });
        });
        $(function () {
            $('.dropdown').hover(function () {
                $(this).addClass('open');
            },
            function () {
                $(this).removeClass('open');
            });
        });
    
    </script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Zilla+Slab" rel="stylesheet">
    <link href="http://fonts.googleapis.com/css?family=Cookie" rel="stylesheet" type="text/css">
    <script src="~/lib/jquery-validation/src/core.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-filestyle/1.2.1/bootstrap-filestyle.js" integrity="sha256-Inp7Jn9AMgIO/R1WxDRHReygOrdgM6w/598nt+rOxrg=" crossorigin="anonymous">
        $(":file").filestyle({ buttonName: "btn-primary" });
    </script>

    <script>
        $.ajaxSetup({ cache: false });
    </script>
    @RenderSection("ScriptSection", false)
</head>
<body>
    <div class="row">

        <div class="col-sm-12 ">
            <div class="row">

                <nav class="navbar navbar-default navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" asp-action="Index" asp-controller="Home">Aptive Physiotherapy</a>   
                        </div>
                        <div class="collapse navbar-collapse" id="myNavbar">
                            <ul class="nav navbar-nav navbar-right">
                                @if (curStaff != null && curStaff.Role.Equals("A"))
                                {

                                    <li>
                                        <a asp-action="Index" asp-controller="Administrator" class="menuItem">Corporate Profile</a>
                                    </li>
                                    <li>
                                        <a asp-action="Index" asp-controller="Staff" class="menuItem">Staff Profile</a>
                                    </li>
                                    <li class="dropdown">
                                        <a class="dropdown-toggle" style="background-color:#28B78D" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                            Customer Reports
                                            <span class="glyphicon glyphicon-chevron-down"></span>
                                        </a>
                                        <ul class="dropdown-menu" style="background-color:#28B78D">
                                            <li>
                                                <a asp-action="Report" asp-controller="Administrator" class="nav-item nav-link">All time Reports</a>
                                            </li>
                                            <li>
                                                <a asp-action="WReport" asp-controller="Administrator" class="nav-item nav-link">Weekly reports</a>
                                            </li>
                                            <li>
                                                <a asp-action="MReport" asp-controller="Administrator" class="nav-item nav-link">Monthly Reports</a>
                                            </li>
                                        </ul>
                                    </li>


                                }
                                @if (curStaff != null && curStaff.Role.Equals("P"))
                                {

                                    <li>
                                        <a asp-controller="Appointment" asp-action="Index" class="menuItem">All Appointments</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Appointment" asp-action="PastIndex" class="menuItem">View Past Appointment</a>
                                    </li>

                                    <li>
                                        <a asp-controller="Appointment" asp-action="Report" class="menuItem">View own Report</a>
                                    </li>
                                }
                                

                                @if (curStaff != null)
                                {
                                    <li>
                                        <a><span class="glyphicon glyphicon-user"></span> @curStaff.Name</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Account" asp-action="Logout" class="menuItem"><span class="glyphicon glyphicon-log-out"></span> Log Out</a>
                                    </li>

                                }
                                @if (curCustomer != null)
                                {
                                    <li>
                                        <a><span class="glyphicon glyphicon-user"></span> @curCustomer.Name</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Account" asp-action="Logout" class="menuItem"><span class="glyphicon glyphicon-log-out"></span> Log Out</a>
                                    </li>

                                }
                                @if (curStaff == null && curCustomer== null)
                                {
                                    <li>
                                        <a asp-action="Signup" asp-controller="Customer" class="menuItem"><span class="glyphicon glyphicon-user"></span>SignUp </a>
                                    </li>
                                    <li>
                                        <a asp-action="Authenticate" asp-controller="Account" class="menuItem"><span class="glyphicon glyphicon-log-in"></span> Log in</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        
      
        <div class="container body-content col-sm-12">

            <text>@RenderBody()</text>
        </div>


    </div>
</body>
</html>
