



@using FYP.Models
@model Customer

@{
    ViewBag.Title = "Sign Up";
}


<style>
    h2 {
        padding: 100px 25px;
        margin-left: 20%;
    }
</style>
<script>
    function conPass() {
        var x = document.forms["myForm"]["password"].value;
        var y = document.forms["myForm"]["conpassword"].value;
        if (x != y) {
            alert("The password is not the same");
            document.getElementById('password').style.borderColor = '#FF6666';
            document.getElementById('cpassword').style.borderColor = '#FF6666';
            return false;

        }
        if (x == "" && y == "") {
            document.getElementById('password').style.borderColor = '#FF6666';
            document.getElementById('cpassword').style.borderColor = '#FF6666';
            alert("The password field is empty");
            return false;

        }

    }

</script>
<h2>Sign up</h2><br />
@if (TempData["Error"] != null)
{
    <div class="container ">
        <div class="alert alert-danger fade in">
            @TempData["Error"]
        </div>
    </div>
}

<div class="col-lg-12">
    <div class="row">

        <form asp-controller="Customer" asp-action="Signup"
              method="post" name="myForm" onsubmit="return conPass()"
              enctype="multipart/form-data"
              class="form-horizontal" role="form">

            <div class="col-sm-8">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="Name"> Name<sup style="color:red">*</sup>:</label>
                        <div class="col-sm-5">
                            <input class="form-control" asp-for="Name" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="Password"> Password<sup style="color:red">*</sup>:</label>
                        <div class="col-sm-5">
                            <input class="form-control" id="password" type="password" />
                        </div>
                        <div class="has-error ">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="Password">Confirm Password<sup style="color:red">*</sup>:</label>
                        <div class="col-sm-5">
                            <input class="form-control" id="cpassword" name="conpassword" type="password" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="Email"> Email<sup style="color:red">*</sup>: </label>
                        <div class="col-sm-5">
                            <input class="form-control" asp-for="Email" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="PhoneNo"> Phone Number<sup style="color:red">*</sup>:</label>
                        <div class="col-sm-5">
                            <input class="form-control" asp-for="PhoneNo" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="Address"> Address<sup style="color:red">*</sup>:</label>
                        <div class="col-sm-5">
                            <input class="form-control" asp-for="Address" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="HomeNo"> Home Number<sup style="color:red">*</sup>:</label>
                        <div class="col-sm-5">
                            <input class="form-control" asp-for="HomeNo" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="HomeNo" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="NextofKin"> Next of Kin:</label>
                        <div class="col-sm-5">
                            <input class="form-control" asp-for="NextofKin" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="NextofKin" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="KinNo"> Kin Number:</label>
                        <div class="col-sm-5">
                            <input class="form-control" asp-for="KinNo" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="KinNo" class="text-danger"></span>
                        </div>
                    </div>


                    @{
                        var GenderArray = new[]{
            new{value="M",text="Male"},
            new {value="F",text="Female"}
            };
                    }
                    <div class="form-group">
                        <label class="col-sm-4 control-label" asp-for="Gender"> Gender<sup style="color:red">*</sup>:</label>
                        <div class="col-sm-5">
                            @foreach (var item in GenderArray)
                            {
                                <input type="radio" asp-for="Gender" value="@item.value" /> @item.text
                            }
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Dob" class="col-sm-4 control-label">Date of Birth<sup style="color:red">*</sup>:</label>
                        <div class='input-group date col-sm-5'>
                            <div class='input-group date col-sm-12' id='BsDateTimePicker' style="margin-left:15px">
                                <input class="form-control" type="datetime" asp-for="Dob" id="TxtApptDate" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="Dob" class="text-danger"></span>
                            </div>
                        </div>
                    </div>





                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-10">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <input type="button" class="btn btn-default" value="Cancel"
                                   onclick="javascript:document.location.href='@Url.Action("Index","Home")'" />
                        </div>
                    </div>
                </div>
            </div>

        </form>

    </div>

</div>



