@model Customer
@using FYP.Models


@{
    ViewBag.Title = "View Customer";
}

<style>
    h2 {
        padding-top: 50px;
    }
</style>

<div class="container">
    <h2>Customer Profile</h2>

    <div class="row">
        <div class="col-sm-5">
            <form asp-controller="Customer" asp-action="ViewCustomer"
                  class="form-horizontal" role="form">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="Name"> Name: </label>
                        <div class="col-sm-8">
                            <input asp-for="Name" class="form-control" readonly="readonly" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="Gender">Gender: </label>
                        <div class="col-sm-8">
                            <input asp-for="Gender" class="form-control" readonly="readonly" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="Address">Address : </label>
                        <div class="col-sm-8">
                            <input asp-for="Address" class="form-control" readonly="readonly" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="PhoneNo">Contact : </label>
                        <div class="col-sm-8">
                            <input asp-for="PhoneNo" class="form-control" readonly="readonly" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="PhoneNo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="Email">Email : </label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" readonly="readonly" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-10">
                            <input type="button" value="Back" onclick="location.href='@Url.Action("Index","Appointment")';" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>


