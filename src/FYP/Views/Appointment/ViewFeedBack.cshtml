@model Feedback
@using FYP.Models

@{
    ViewBag.Title = "View FeedBack";
}

<style>
    h2 {
        padding-top: 50px;
    }
</style>

<div class="container">
    <h2>View Feedback</h2>

    <div class="row">
        <div class="col-sm-8">
            <form asp-controller="Appointment" asp-action="ViewFeedBack"
                  class="form-horizontal" role="form">
                <div class="form-horizontal">
                    @*
                        <div class="form-group">
                            <label class="control-label col-sm-4" asp-for="Id"> FeedBack Id : </label>
                            <div class="col-sm-5">
                                <input asp-for="Id" class="form-control" readonly="readonly" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-4" asp-for="AId"> Appointment Id : </label>
                            <div class="col-sm-5">
                                <input asp-for="AId" class="form-control" readonly="readonly" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="AId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-sm-4" asp-for="CId"> Customer Id : </label>
                            <div class="col-sm-5">
                                <input asp-for="CId" class="form-control" readonly="readonly" />
                            </div>
                            <div class="has-error">
                                <span asp-validation-for="CId" class="text-danger"></span>
                            </div>
                        </div>
                    *@

                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="FeedBackTime"> FeedBack Time: </label>
                        <div class="col-sm-5">
                            <input asp-for="FeedBackTime" class="form-control" readonly="readonly" value="@String.Format("{0:dd-MM-yyyy HH:mm:ss}",DateTime.Now)" />
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="FeedBackTime" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="CustomerComment"> Customer Comment: </label>
                        <div class="col-sm-8">
                            <textarea asp-for="CustomerComment" rows="5" cols="160" readonly="readonly" class="form-control"></textarea>
                        </div>

                        <div class="has-error">
                            <span asp-validation-for="CustomerComment" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-4" asp-for="StaffComment"> Staff Comment: </label>

                        <div class="col-sm-8">
                            <textarea asp-for="StaffComment" rows="10" cols="160" class="form-control"></textarea>
                        </div>


                        <div class="has-error">
                            <span asp-validation-for="StaffComment" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-10">
                            <input type="submit" value="Update" class="btn btn-default" />
                            <input type="button" value="Cancel" onclick="location.href='@Url.Action("PastIndex","Appointment")';" class="btn btn-default" />
                        </div>
                    </div>



                </div>
            </form>
        </div>
    </div>
</div>

