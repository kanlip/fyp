@using FYP.Models
@model Staff

@{
    ViewBag.Title = "Update Staff Profile";

}
<style>
    h2 {
        padding: 100px 25px;
        margin-left: 20%;
    }
</style>
<link href="~/lib/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
<script src="~/lib/moment/min/moment.min.js"></script>
<script src="~/lib/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>

<h2>Update Staff Profile</h2><br />


<div class="row">

    <form asp-controller="Staff" asp-action="Edit"
          method="post" enctype="multipart/form-data"
          class="form-horizontal" role="form">
        <div class="col-sm-8">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-4 control-label" asp-for="StaffId">Staff Id: </label>
                    <div class="col-sm-4">
                        <input asp-for="StaffId" class="form-control " readonly />
                    </div>
                    <div class="has-error">
                        <span asp-validation-for="StaffId" class="text-danger"></span>
                    </div>
                </div>
                <!--for Name-->
                <div class="form-group">
                    <label class="col-sm-4 control-label" asp-for="Name"> Name:</label>
                    <div class="col-sm-7">
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <div class="has-error">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-4 control-label" asp-for="Email"> Email : </label>
                    <div class="col-sm-7">
                        <input class="form-control" asp-for="Email" />
                    </div>
                    <div class="has-error">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" asp-for="PhoneNo"> Phone Number:</label>
                    <div class="col-sm-7">
                        <input class="form-control" asp-for="PhoneNo" />
                    </div>
                    <div class="has-error">
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                    </div>
                </div>
                @{
                    var RoleArray = new[]{
                    new{value='A',text="Administrator"},
                    new {value='P',text="Physiotherapist"}
                    };
                }
                <div class="form-group">
                    <label class="col-sm-4 control-label" asp-for="Role"> Role:</label>
                    <div class="col-sm-7">
                        @foreach (var item in RoleArray)
                        {
                            <input type="radio" asp-for="Role" value="@item.value" /> @item.text
                        }
                    </div>
                    <div class="has-error">
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                </div>

                @{
                    var GenderArray = new[]{
            new{value='M',text="Male"},
            new {value='F',text="Female"}
            };
                }
                <div class="form-group">
                    <label class="col-sm-4 control-label" asp-for="Gender"> Gender:</label>
                    <div class="col-sm-7">
                        @*@foreach (var item in GenderArray)
                        {
                            <input type="radio" asp-for="Gender" value="@item.value" /> @item.text
                        }*@
                        
                       
                        @if (Model.Gender == "M")
                        {
                            <text>Male</text>

                        }
                        @if(Model.Gender == "F")
                        {
                            <text>Female</text>

                        }
                    </div>
                    @*<div class="has-error">
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>*@
                </div>

                <div class="form-group">
                    <label asp-for="Dob" class="col-sm-4 control-label">Date of Birth:</label>
                    <div class='input-group  col-sm-7'>
                        <div class='input-group col-sm-12' id='BsDateTimePicker' style="margin-left:15px">
                            <input class="form-control" type="datetime" asp-for="Dob" id="TxtApptDate" placeholder="YYYY-MM-DD" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                        <div class="has-error">
                            <span asp-validation-for="Dob" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-4 control-label">Profile picture:</label>
                    <div class="col-sm-4">

                        <input type="file" name="file" class="filestyle" onchange="readURL(this);" data-buttonName="btn-primary">
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-10">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <input type="button" class="btn btn-default" value="Cancel"
                               onclick="javascript:document.location.href='@Url.Action("Index")'" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">

                <img src="@String.Format("/images/staff_{0}.jpg", ViewData["pic"])" id="profile" class="img-rounded" alt="profile" width="280" height="400">

            </div>
        </div>
    </form>

</div>
